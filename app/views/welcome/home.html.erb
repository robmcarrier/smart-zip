<h1>Welcome <%= @profile.name.capitalize if @profile != nil %></h1>

<p><%= current_user.email %></p>
<% if @profile != nil %>
  <p><%= @profile.phone_number %></p>
<% else %>
  <p><%= link_to'Finish your profile!', new_user_profile_path %></p>
<% end %>
<ul>
<% @campaigns.each do |c| %>
  <li> <%= link_to c.name, campaign_path(c) %></li>
<% end %>
</ul.

<p><%= link_to("Sign out", destroy_user_session_path, :method => :delete) %></p>
